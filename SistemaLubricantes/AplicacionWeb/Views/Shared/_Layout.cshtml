    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.18/css/bootstrap-select.min.css">
    <script language="javascript" type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
    <script language="javascript" type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.18/js/bootstrap-select.min.js"></script>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.18/dist/sweetalert2.all.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.18/dist/sweetalert2.min.css" rel="stylesheet">

    <script src="~/Scripts/View/Shared/Layout.js"></script>

    <style>
        .nav .nav-link:hover,
        .nav .nav-link:focus,
        .nav .nav-link:active {
            text-decoration: none;
            background: #0d6efd;
            transition: 0.5s;
        }

        .tipoCambio {
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        @@media screen and (max-width: 1200px) and (min-width: 768px) {
            #fechaHora {
                visibility: visible;
            }
        }

        @@media screen and (max-width: 767px) and (min-width: 0px) {
            #fechaHora {
                visibility: hidden;
            }

            .tipoCambio {
                position: absolute;
                left: 160px;
            }
        }
    </style>
</head>

<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark" style="background-color: #091429;">
        <!-- Navbar Brand-->
        <a class="navbar-brand" href="@Url.Action("Index","Home")" style="font-family: cursive">
            <h2>&nbsp;<i class="fas fa-certificate"></i><b>&nbsp;EL TUMI</b></h2>@*<img class="" src="~/images/tumiBanner.png" alt="">*@
        </a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-lg order-1 order-lg-0 me-4 me-lg-0 text-white" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar T.C.-->
        <b><span id="fechaHora" style="font-size:18px;color:white">@DateTime.Now.ToShortDateString()&nbsp;@DateTime.Now.ToString("HH:mm:ss")</span></b>
        <form class="tipoCambio">
            <div class="input-group">
                <b>
                    <span style="color:white;text-align:center;background-color:transparent;border:hidden;font-size:20px">T.C.&nbsp;</span>
                    <text id="txtTipoCambio" style="color:white;text-align:center;background-color:transparent;border:hidden;font-size:20px"></text>
                </b>&nbsp;&nbsp;
                <button class="btn btn-success rounded-circle" onclick="abrirModalTC()" type="button"><i class="fas fa-plus"></i></button>
            </div>
        </form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-primary" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="false" aria-expanded="false">
                    <i class="fas fa-user fa-primary"></i>
                    <span class="mr-2 d-none d-lg-inline text-white" style="color:#13213d; font-size:15px;font-variant-numeric: tabular-nums; text-align: center; text-transform: capitalize;">&nbsp;&nbsp; JOSE</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown" style="right: 0; left: auto; height: auto; background-color: MediumOrchid">
                    <a class="dropdown-item d-flex align-items-center" href="#" data-toggle="modal" data-target="#logoutModal">
                        <div class="mr-3">
                            <div class="icon-circle" style="background-color:#13213d;border-radius:50%;width:30px;text-align:center;">
                                <i class="fas fa-sign-out-alt text-white"></i>
                            </div>
                        </div>
                        <div>
                            <span class="font-weight-bold">Cerrar Sesión</span>
                        </div>
                    </a>
                    <a class="dropdown-item d-flex align-items-center" href="#" onclick="ClearCache()">
                        <div class="mr-3">
                            <div class="icon-circle" style="background-color:#13213d;border-radius:50%;width:30px;text-align:center;">
                                <i class="fas fa-trash-alt text-white"></i>
                            </div>
                        </div>
                        <div>
                            <span class="font-weight-bold">Limpiar historial</span>
                        </div>
                    </a>
                </div>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
