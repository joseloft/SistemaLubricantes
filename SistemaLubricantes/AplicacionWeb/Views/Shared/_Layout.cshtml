    <title>EL TUMI</title>
    <link rel="icon" type="image/png" sizes="16x16" href="~/Images/logoWeb.png">
    @Styles.Render("~/Content/css")

    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Scripts/View/Shared/Layout.js"></script>

    <style>
        .nav .nav-link:hover,
        .nav .nav-link:focus,
        .nav .nav-link:active {
            text-decoration: none;
            background: #0d6efd;
            transition: 0.5s;
        }

        .tipoCambio {
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
