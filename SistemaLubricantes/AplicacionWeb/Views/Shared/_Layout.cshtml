                            COMPRAS
                        </a>
                        <a class="nav-link text-white" href="@Url.Action("Ventas","Venta")">
                            <div class="sb-nav-link-icon text-white"><i class="fas fa-store"></i></div>
                            VENTAS
                        </a>
                        <a class="nav-link text-white" href="@Url.Action("Clientes","Cliente")">
                            <div class="sb-nav-link-icon text-white"><i class="fas fa-user-plus"></i></div>
                            CLIENTES
                        </a>
                        <a class="nav-link text-white" href="@Url.Action("Caja","Caja")">
