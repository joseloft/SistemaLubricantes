        </a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-lg order-1 order-lg-0 me-4 me-lg-0 text-white" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar T.C.-->
        <b><span style="font-size:18px;color:white">&nbsp;@DateTime.Now.DayOfWeek&nbsp;@DateTime.Now.ToShortDateString()&nbsp;@DateTime.Now.ToString("HH:mm:ss")</span></b>
        <form class="tipoCambio">
            <div class="input-group">
                <label class="form-control form-control-sm" style="color:white;text-align:center;background-color:transparent;border:hidden;font-size:20px"><b>T.C.</b></label>
                <label class="form-control form-control-sm" id="lblTipoCambio" style="color:white;text-align:center;background-color:transparent;border:hidden;font-size:20px"><b>3.68</b></label>
                &nbsp&nbsp&nbsp<button class="btn btn-success rounded-circle" onclick="abrirModalTC()" type="button"><i class="fas fa-plus"></i></button>
            </div>
        </form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-primary" id="userDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user fa-primary"></i>
                    <span class="mr-2 d-none d-lg-inline text-white" style="color:#13213d; font-size:15px;font-variant-numeric:tabular-nums;text-align:center;text-transform: capitalize;">JOSELO</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown" style="right: 0; left: auto;height:auto;">
                    <a class="dropdown-item d-flex align-items-center" href="#" data-toggle="modal" data-target="#logoutModal">
                        <div class="mr-3">
                            <div class="icon-circle" style="background-color:#13213d;">
                                <i class="fas fa-sign-out-alt text-white"></i>
                            </div>
                        </div>
                        <div>
                            <span class="font-weight-bold">Cerrar Sesión</span>
                        </div>
                    </a>
                    <a class="dropdown-item d-flex align-items-center" href="#" onclick="ClearCache()">
                        <div class="mr-3">
                            <div class="icon-circle" style="background-color:#13213d;">
                                <i class="fas fa-trash-alt text-white"></i>
                            </div>
                        </div>
                        <div>
                            <span class="font-weight-bold">Limpiar historial</span>
                        </div>
                    </a>
                </div>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion" style="background-color: #091429;font-size:13px">
