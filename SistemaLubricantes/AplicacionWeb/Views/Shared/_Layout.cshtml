        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="footer-copyright-area" style="background-color: #071b42;color:white;padding-top:15px">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-center">
                        <p>Copyright © Designed &amp; Developed by <a href="#" target="_blank">SQUAD-T</a> 2023</p>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <div class="modal fade" id="modalTipoCambio" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <div class="modal-header justify-content-center" style="background-color: darkslategrey;color:white">
                    <h5 class="modal-title" id="exampleModalLabel"><i class="fas fa-dollar-sign"></i>   Tipo de Cambio</h5>
                    <button type="button" class="btn-close btn-light" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">
                            <input id="txtNuevoTipoCambio" type="number" class="form-control" style="text-align:right" placeholder="Ingrese nuevo cambio" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="GuardarTipoCambio()">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/complementos")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
