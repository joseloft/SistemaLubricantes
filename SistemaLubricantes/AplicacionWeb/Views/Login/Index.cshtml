@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EL TUMI</title>
    <link rel="icon" type="image/png" sizes="16x16" href="~/Images/logoWeb.png">
    <!--font-ini-->
    <link href='//fonts.googleapis.com/css?family=Muli:400,300,300italic,400italic' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Comfortaa:400,300,700' rel='stylesheet' type='text/css'>
    <!--font - fin-->
    <!--styles - ini-->
    <link href="~/Content/bootstrap4.4.1/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/login/animate-custom.css" rel="stylesheet" />
    <link href="~/Content/login/style.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <!--styles - fin-->
    <!--js - ini-->
    <script src="~/Content/js/jquery-3.4.1.js"></script>
    <!--js - fin-->

    <style>
        .abs-center {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 80vh;
        }

        .form {
            width: 350px;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="clearfix"></div>
    <div id="wrapper">
        <div class="container">
            <div class="abs-center">
                <form action="@Url.Content("~/Home/Index")" method="post" autocomplete="on">
                    <div id="login" class="animate form">
                        <p>
                            <div class="border p-3 form ">
                                <div class="form-row">
                                    <div style="text-align: center; width: 100%;">
                                        <img src="~/Images/logoOficial.png" width="200" />
                                    </div>
                                </div>
                                @*<h2 style="font-size:20px!important">EL TUMI</h2>*@
                                <div class="form-group">
                                    <center>
                                        <label for="username">Usuario</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text bg-primary"><i class="fa fa-user"></i></span>
                                            </div>
                                            <input id="username" name="Name" required="required" type="text" placeholder="[user name]" value="@ViewBag.User" class="form-control form-control-sm" />
                                        </div>
                                    </center>
                                </div>
                                <div class="form-group">
                                    <center>
                                        <label for="password">Contraseña</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text bg-primary"><i class="fa fa-lock"></i></span>
                                            </div>
                                            <input type="password" name="password" id="password" required="required" class="form-control form-control-sm" placeholder="[user password]">

                                        </div>
                                    </center>
                                </div>
                                <br />
                                <center>
                                    <button type="submit" value="Login" class="btn btn-block btn-sm" style="background-color: #5ea20c; color:aliceblue">Login</button>
                                </center>
                            </div>
                        </p>
                    </div>
                </form>
            </div>            
        </div>        
    </div>
    <p class="agileits">© <span id="spanYear"></span> Copyright Login Form. All Rights Reserved </p>
    <script src="~/Content/js/bootstrap.bundle.js"></script>
</body>
</html>
