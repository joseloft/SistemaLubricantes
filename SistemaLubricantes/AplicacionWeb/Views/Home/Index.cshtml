@{
    ViewBag.Title = "Home Page";
}
<style>
    .contenedor {
        width: 100%;
        max-width: 1400px;
        margin-top: 10px;
        background-color: Snow;
        overflow: hidden;
        box-sizing: border-box;
        display: grid;
        grid-gap: 10px;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(2, auto);
    }

    .pagos {
        grid-column: span 2;
    }

    .ventas {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
        background-color: transparent;
    }

    .card {
        border-radius: 10px;
        min-height: 10px;
        font-weight: bold;
        position: relative;
        margin-bottom: -5px;
        overflow: hidden;
        background-size: cover;
        background-position: center center;
    }

        .card h3 {
            font-size: 30px;
            line-height: 40px;
            font-weight: 900;
            color: #fff;
            font-family: muli,sans-serif;
            padding-left: 5px;
        }
        .card p {
            font-size: 17px;
            font-weight: 500;
            color: #fff;
            font-family: muli,sans-serif;
            padding-left: 5px;
        }        

    .util {
        grid-column: 3/4;
        background-color: transparent;
        grid-row: 1/4;
    }

    .notificaciones {
        grid-column: span 2;
        margin-top: -15px;
    }

    .panel-green {
        border-color: #248f36;
    }

        .panel-green .panel-heading {
            border-color: #248f36;
            color: #fff;
            background-color: #248f36;
            border-radius: 5px;
        }

        .panel-green a {
            color: #248f36;
        }

            .panel-green a:hover {
                color: #3d8b3d;
            }

    .panel-primary {
        border-color: #191970;
    }

        .panel-primary .panel-heading {
            border-color: #191970;
            color: #fff;
            background-color: #191970;
            border-radius: 5px;
        }

        .panel-primary a {
            color: #191970;
        }

            .panel-primary a:hover {
                color: #3d578b;
            }

    .panel-red {
        border-color: #8B008B;
    }

        .panel-red .panel-heading {
            border-color: #8B008B;
            color: #fff;
            background-color: #8B008B;
            border-radius: 5px;
        }

        .panel-red a {
            color: #8B008B;
        }

            .panel-red a:hover {
                color: #b52b27;
            }

    .panel-yellow {
        border-color: #FF8C00;
    }

        .panel-yellow .panel-heading {
            border-color: #FF8C00;
            color: #fff;
            background-color: #FF8C00;
            border-radius: 5px;
        }

        .panel-yellow a {
            color: #FF8C00;
        }

            .panel-yellow a:hover {
                color: #df8a13;
            }

    .quantity {
        font-size:48px;
        text-align:right;
    }

</style>

<div class="contenedor">
    <div class="pagos">
        <div class="card border-secondary mb-2">
            <div class="card-header" style="background-color:darkslategrey;color:white"><i class="fas fa-chart-bar"></i> Ventas del día</div>
            <div class="card-body ventas">
                <div class="card" style="background-color: #2E8B57">
                    <div class="row">
                        <div class="col-8">
                            <h3>S/. <span id="efectivo"></span></h3>
                            <p>Total Efectivo</p>
                        </div>
                        <div class="col-4">
                            <i class="fa fa-money-bill-wave fa-3x"></i>
                        </div>
                    </div>
                </div>
                <div class="card" style="background-color: #3CB371">
                    <div class="row">
                        <div class="col-8">
                            <h3>S/. <span id="tarjeta"></span></h3>
                            <p>Total Tarjeta</p>
                        </div>
                        <div class="col-4">
                            <i class="fa fa-credit-card fa-3x"></i>
                        </div>
                    </div>
                </div>
                <div class="card" style="background-color: #228B22">
                    <div class="row">
                        <div class="col-8">
                            <h3>S/. <span id="contado"></span></h3>
                            <p>Total Contado</p>
                        </div>
                        <div class="col-4">
                            <i class="fa fa-landmark fa-3x"></i>
                        </div>
                    </div>
                    </div>
                <div class="card" style="background-color: #32CD32">
                    <div class="row">
                        <div class="col-8">
                            <h3>S/. <span id="yape"></span></h3>
                            <p>Total Yape</p>
                        </div>
                        <div class="col-4">
                            <i class="fa fa-yen-sign fa-3x"></i>
                        </div>
                    </div>
                </div>
                <div class="card" style="background-color: #32CD32">
                    <div class="row">
                        <div class="col-8">
                            <h3>S/. <span id="plin"></span></h3>
                            <p>Total Plin</p>
                        </div>
                        <div class="col-4">
                            <i class="fa fa-paragraph fa-3x"></i>
                        </div>
                    </div>
                </div>
                <div class="card" style="background-color: #6B8E23">
                    <div class="row">
                        <div class="col-8">
                            <h3>S/. <span id="credito"></span></h3>
                            <p>Total Credito</p>
                        </div>
                        <div class="col-4">
                            <i class="fa fa-coins fa-3x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="util">
        <div class="row">
            <div class="col-lg-12 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row" style="padding:7px">
                            <div class="col-6">
                                <div class="quantity" style="text-align:left" id="totalVentas"></div>
                                <div style="text-align:left;padding-left:10px"><b>Total Ventas</b></div>
                            </div>
                            <div class="col-6">
                                <i class="fa fa-money-bill fa-5x"></i>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">Ver Detalle</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row" style="padding:7px">
                            <div class="col-7 text-right">
                                <div class="quantity" id="cantidadVentas"></div>
                                <div style="text-align:left"><b>Cantidad ventas</b></div>
                            </div>
                            <div class="col-5">
                                <i class="fas fa-wallet fa-5x"></i>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">Ver Detalle</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-6">
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        <div class="row" style="padding:7px">
                            <div class="col-7 text-right">
                                <div class="quantity" id="clientesNuevos"></div>
                                <div style="text-align:right"><b>Clientes Nuevos</b></div>
                            </div>
                            <div class="col-5">
                                <i class="fa fa-star-half-alt fa-5x"></i>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">Ver Detalle</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-6">
                <div class="panel panel-red">
                    <div class="panel-heading">
                        <div class="row" style="padding:7px">
                            <div class="col-8">
                                <div class="quantity" style="text-align:left" id="facturacion"></div>
                                <div style="text-align:left;padding-left:10px"><b>Facturación</b></div>
                            </div>
                            <div class="col-4">
                                <i class="fa fa-file-invoice-dollar fa-5x"></i>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">Ver Detalle</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="notificaciones">
        <div class="card border-secondary mb-3">
            <div class="card-header" style="background-color:darkslategrey;color:white"><i class="fas fa-notes-medical"></i> Notificaciones</div>
            <div class="card-body" style="margin-bottom:-15px">
                <div class="form-group row" style="background-color: #336B87; border-radius: 10px">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                        <button class="btn btn-link collapsed text-black" data-toggle="collapse" data-target="#collapseProductos" aria-expanded="false" aria-controls="collapseProductos">
                            <strong style="color:black">PRODUCTOS MAS VENDIDOS CON POCO STOCK</strong>
                            <i class="fas fa-angle-down arrow"></i>
                        </button>
                    </div>
                    <div id="collapseProductos" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                        <div class="card-body">
                            <div class="table-responsive" id="listaPorductos">
                                <table id='tblProductos' class='table table-cebra table-hover table-bordered' width="100%">
                                    <thead style="background-color: #13213d; color: white; font-size: 12px; text-align: center">
                                        <tr>
                                            <td style="min-width: 5px;">ITEM</td>
                                            <td style="min-width: 20px;">CODIGO</td>
                                            <td style="min-width: 50px;">MARCA</td>
                                            <td style="min-width: 250px;">PRODUCTO</td>
                                            <td style="min-width: 20px;">STOCK</td>
                                            <td style="min-width: 50px;">MODELO</td>
                                            <td style="min-width: 20px;">PRECIO</td>
                                        </tr>
                                    </thead>
                                    <tbody style="font-size: 11px; text-align: center; color: white">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>                
                <div class="form-group row" style="background-color: #4C3F54; border-radius: 10px">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                        <button class="btn btn-link collapsed text-black" data-toggle="collapse" data-target="#collapseVentas" aria-expanded="false" aria-controls="collapseVentas">
                            <strong style="color:black">VENTAS SIN COMPROBANTE</strong>
                            <i class="fas fa-angle-down arrow"></i>
                        </button>
                    </div>
                    <div id="collapseVentas" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                        <div class="card-body">
                            <div class="table-responsive" id="listaVentas">
                                <table id='tblVentas' class='table table-cebra table-hover table-bordered' width="100%">
                                    <thead style="background-color: #13213d; color: white; font-size: 12px; text-align: center">
                                        <tr>
                                            <td style="min-width: 5px;">ITEM</td>
                                            <td style="min-width: 20px;">CODIGO</td>
                                            <td style="min-width: 200px;">CLIENTE</td>
                                            <td style="min-width: 50px;">FECHA VENTA</td>
                                            <td style="min-width: 20px;">TOTAL</td>
                                            <td style="min-width: 30px;">ESTADO</td>
                                            <td style="min-width: 30px;">PLACA</td>
                                        </tr>
                                    </thead>
                                    <tbody style="font-size: 11px; text-align: center; color: white">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row" style="background-color: #693D3D; border-radius: 10px">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                        <button class="btn btn-link collapsed text-black" data-toggle="collapse" data-target="#collapseCreditos" aria-expanded="false" aria-controls="collapseCreditos">
                            <strong style="color:black">CREDITOS POR VENCER</strong>
                            <i class="fas fa-angle-down arrow"></i>
                        </button>
                    </div>
                    <div id="collapseCreditos" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                        <div class="card-body">
                            <div class="table-responsive" id="listaCreditos">
                                <table id='tblCreditos' class='table table-cebra table-hover table-bordered' width="100%">
                                    <thead style="background-color: #13213d; color: white; font-size: 12px; text-align: center">
                                        <tr>
                                            <td style="min-width: 5px;">ITEM</td>
                                            <td style="min-width: 30px;">CODIGO</td>
                                            <td style="min-width: 200px;">CLIENTE</td>
                                            <td style="min-width: 50px;">MONTO VENTA</td>
                                            <td style="min-width: 50px;">MONTO CREDITO</td>
                                            <td style="min-width: 50px;">FECHA DE VENCIMIENTO</td>
                                            <td style="min-width: 30px;">DIAS CREDITO</td>
                                        </tr>
                                    </thead>
                                    <tbody style="font-size: 11px; text-align: center; color: white">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row" style="background-color: #763626; border-radius: 10px">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                        <button class="btn btn-link collapsed text-black" data-toggle="collapse" data-target="#collapseClientes" aria-expanded="false" aria-controls="collapseClientes">
                            <strong style="color:black">CLIENTES SIN CORREO</strong>
                            <i class="fas fa-angle-down arrow"></i>
                        </button>
                    </div>
                    <div id="collapseClientes" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                        <div class="card-body">
                            <div class="table-responsive" id="listaClientes">
                                <table id='tblClientes' class='table table-cebra table-hover table-bordered' width="100%">
                                    <thead style="background-color: #13213d; color: white; font-size: 12px; text-align: center">
                                        <tr>
                                            <td style="min-width: 10px;">ITEM</td>
                                            <td style="min-width: 50px;">CODIGO</td>
                                            <td style="min-width: 200px;">CLIENTE</td>
                                            <td style="min-width: 70px;">FECHA REGISTRO</td>
                                            <td style="min-width: 50px;">TIPO CLIENTE</td>
                                            <td style="min-width: 70px;">DNI/RUC</td>
                                        </tr>
                                    </thead>
                                    <tbody style="font-size: 11px; text-align: center; color: white">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/View/Home/Home.js"></script>
